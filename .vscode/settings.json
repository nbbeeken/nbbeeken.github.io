{
	"files.autoSave": "onFocusChange",
	"editor.codeActionsOnSave": {
		"source.fixAll": "always"
	},
	"[html]": {
		"editor.defaultFormatter": "vscode.html-language-features"
	},
	"editor.tabSize": 2,
	"editor.formatOnSave": false,
	"cSpell.words": [
		"ahci",
		"angularjs",
		"asciiquotes",
		"CEWIT",
		"dashmips",
		"gōng'àn",
		"kōan",
		"nbbeeken",
		"nunca",
		"PAAS",
		"readingerror",
		"sharded",
		"userspace",
		"Wolfie"
	],
	"files.exclude": {
		"**/*.mjs": true,
		"**/*.mjs.map": true
	}
}
